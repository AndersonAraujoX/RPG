rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Private User Data (Strict)
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Shared "Mesa de Operações" Data (Authenticated Users)
    match /map_pins/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /mission_signups/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Default/Legacy Characters Collection
    match /personagens/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Collection Group Query for Characters (Read-only for all auth users)
    // This allows searching across all /users/{id}/characters
    match /{path=**}/characters/{characterId} {
      allow read: if request.auth != null;
    }
    
  }
}
